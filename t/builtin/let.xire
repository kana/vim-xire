(function (s:let)
  (let ([x 2]
        [y 3])
    (echo "let (outer) 1:" "x =" x "y = " y)
    (let ([x 7]
          [z (+ x y)])
      (echo "let (inner):" "x =" x "y = " y "z = " z))
    (echo "let (outer) 2:" "x =" x "y = " y)))
(call (s:let))

(function (s:let-star)
  (let* ([x 3]
         [y (+ x 1)]
         [z (* x y)])
    (echo "let* (outer) 1:" x y z)
    (let* ([x (+ x y z)])
      (echo "let* (inner):" x y z))
    (echo "let* (outer) 2:" x y z)))
(call (s:let-star))
